<Page x:Class="FishingStore.Views.ProductDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FishingStore.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductDetailPage" Background="White">

    <Grid>
        <StackPanel>
            <Button Content="Back" Click="BackButton_Click" Margin="10"/>
            <TextBlock Text="Name:" Margin="10"/>
            <TextBox x:Name="NameTextBox" Margin="10"/>
            <TextBlock Text="Description:" Margin="10"/>
            <TextBox x:Name="DescriptionTextBox" Margin="10"/>
            <TextBlock Text="Price:" Margin="10"/>
            <TextBox x:Name="PriceTextBox" Margin="10"/>
            <Button Content="Save" Click="SaveButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>