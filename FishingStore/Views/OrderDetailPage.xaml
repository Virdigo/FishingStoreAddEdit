<Page x:Class="FishingStore.Views.OrderDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FishingStore.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderDetailPage" Background="White">

    <Grid>
        <StackPanel>
            <TextBlock Text="User ID:" Margin="10"/>
            <TextBox x:Name="UserIdTextBox" Margin="10"/>
            <TextBlock Text="Order Date:" Margin="10"/>
            <TextBox x:Name="OrderDateTextBox" Margin="10"/>
            <Button Content="Save" Click="SaveButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>